<!--pages/packagePredictTrans/packagePredictTrans.wxml-->
<form bindsubmit="formSubmit">
<view class="top">
  <view class="left">
    <button type="primary"  class="special" style="background-color: #f9364f;width:95%;" bindtap="jump" data-jump="packagePredictTrans">Custom Declarations</button>
  </view>
  <view class="center">
    <button type="primary"  class="common" style="color:#f9364f;background-color: #ffffff;width:95%;" bindtap="jump" data-jump="packageRenlingTrans">Find your package</button>
  </view>
  <view class="right">
    <button type="primary" class="common" style="color:#f9364f;background-color: #ffffff;width:95%" bindtap="jump" data-jump="arrivedPackageTrans">My package</button>
  </view>
</view>

<view class="middle-form">
  <view class="top-wrap">
      <image src="../../images/trans/1.png" class="img"></image>
      <text class="word-tip">Fill packagepredict</text>
  </view>
  <view class="form">
      <view class="row">
          <view class="fleft">
              <text class="red">*</text>
              Location
          </view>
        
          <view class="fright">
           <picker bindchange="bindDepotChange" name="depot" value="{{depotindex}}" range="{{depot}}">
              <view class="picker">
                  <text style="margin-left:5px;">{{depot[depotindex]}}</text>
                  <view style="float:right;margin-right:5px;">
                        <image src="../../images/common/Arrow-bottom.png" class="arrow"></image>
                  </view>
              </view>
            </picker>
          </view>

          
          
      </view>
      <view class="hr"></view>
       <view class="row">
          <view class="fleft">
              <text class="red">*</text>
              Carrier name
          </view>
        <view class="fright">
           <picker bindchange="bindPickerChange" name="express" value="{{index}}" range="{{array}}">
              <view class="picker">
                  <text style="margin-left:5px;">{{array[index]}}</text>
                  <view style="float:right;margin-right:5px;">
                        <image src="../../images/common/Arrow-bottom.png" class="arrow"></image>
                  </view>
              </view>
            </picker>
          </view>
         
          
      </view>
      <view class="hr"></view>
       <view class="row-3">
          <view class="fleft-3">
              <text class="red">*</text>
              Tracking number
          </view>
           <input style="width: 379rpx; height: 42rpx;display: block; box-sizing: border-box" class="input" placeholder="" name='waybill' />
          
      </view>
      <view class="hr"></view>
  </view>
  <view class="table">
      <view class="tr"> 
          <view class="good-name">Item name</view>
          <view class="count">Quantity</view>
          <view class="value">Value(USD)</view>
          <view class="action">Action</view>
      </view>
      <view class="tr"> 
          <view class="good-name">
            <input class="tinput" placeholder="clothes" />

          </view>
          <view class="count">
            <input class="tinput" placeholder="2" />

          </view>
          <view class="value">
            <input style="width: 145rpx; height: 40rpx; display: block; box-sizing: border-box" class="tinput" placeholder="1285.00" />

          </view>
          <view class="action">
            <button class="btn" style="position: relative; left: -22rpx; top: 0rpx; width: 164rpx; height: 60rpx; display: block; box-sizing: border-box">Delete</button>
          </view>
      </view>
    <block wx:for="{{goods}}">
       <view class="tr"> 
          <view class="good-name">
            <input class="tinput" placeholder=""/>

          </view>
          <view class="count">
            <input class="tinput" placeholder="" />

          </view>
          <view class="value">
            <input class="tinput" placeholder=""/>
          </view>
          <view class="action">
            <button class="btn" data-index="{{index}}" ontap="deleteGood">删除</button>
          </view>
      </view> 
     </block> 
       <view class="add-good">
            <button size="mini" style="line-height: 12px; padding: 5px 0; width: 214rpx; height: 58rpx; display: block; box-sizing: border-box; left: 0rpx; top: 0rpx" class="add-btn" bindtap="addGood">Additional item</button>
            <view class="add-tip">
              if you have more than one item, please leave as comment
            </view>
      </view>
  </view>
  <view class="remark">
      <view class="re-left">Additional notice</view>
      <view class="re-right">
          <textarea style="width: 533rpx; height: 211rpx; display: block; box-sizing: border-box; left: 46rpx; top: 0rpx; position: relative" class="textarea" placeholder="Additional comment about your item" placeholder-style="color:#6a6a6a;"  />
      </view>
  </view>
</view>
<view class="submit">
  <button form-type="submit"  type="primary" style="background-color: #f9364f;"   data-jump="mergeTrans">
    Submit
  </button>
</view>
</form>
