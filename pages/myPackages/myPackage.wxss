/* pages/myPackages/myPackage.wxss */

.title_container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 42rpx 0;
  box-sizing: border-box; 
}

.title_container text {
  font-size: 22px;
}

.top-bar{
  border-radius: 24rpx;
  margin: 32rpx;
  overflow: hidden;
  background-color: salmon;
}

.option-switch{
  margin-left: 12rpx;
}

.main-view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 60vh;
  background-color:#f5f5f5;
  
  box-shadow: 
    inset 0 4rpx 10rpx rgba(0, 0, 0, 0.1), 
    inset 0 -4rpx 10rpx rgba(0, 0, 0, 0.1), 
    inset 4rpx 0 10rpx rgba(0, 0, 0, 0.1), 
    inset -4rpx 0 10rpx rgba(0, 0, 0, 0.1);
}

/* packageList */

.card{
  border-radius: 24rpx;
  margin: 32rpx;
  overflow: hidden;
}

.t-cell-group{
  top: 32rpx;
}

/* empty */
.empty{
  --td-empty-icon-color: #82B8E9;
  --td-empty-description-font-size: 38rpx;
  --td-empty-description-color: black;
}

.empty-description-second{
  display:block;
  margin-top: 32rpx;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.4);
}


.submit_btn{
  margin-top: 8rpx;
  border-radius: 0;
}