/* announcement.wxss */
.ann{
  margin: 10px 2px 0 2px;
  min-height: 110px;
  background-color: #ffffff;
  padding: 20px 10px 5px 10px;
}
.hr{
    width: 100%;
    height: 1px;
    margin: 10px 0;
    background-color: #c7c7c7;
}
Page {
  background: #f5f5f5;
  font-size: 30rpx;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}
.ann_title{
  font-size: 20px;
}
.ann_body{
    color: rgba(0, 0,0, .7);
}
.ann_bottom{
  margin:20px 0 10px 0; 
}
.ann_date{
  display: inline;
  float: left;
  color: rgba(0, 0,0, .5);
}
.ann_admin{
  display: inline;
  float: right;
  color: rgba(0, 0,0, .5);
}
.asert{
  font-size: 20px;
  float: right;
  color: rgba(0,0,0,.5);
}