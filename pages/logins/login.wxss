/* pages/logins/login.wxss */

.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  padding-left: 32px;
  padding-right: 32px;
}

.login-box {
  text-align: center;
}

.logo {
  width: 100px;
  height: 100px;
  margin-bottom: 32px;
}

.input-wrapper {
  display: flex;
  width: 100%;
  padding: 8px;
  box-sizing: border-box;
  color: black;
}

.phn_no-label {
  width: 105px;
}

.phn_no-input {
  flex: 1;
}

.pw-label {
  width: 105px;
}

.pw-input {
  flex: 1;
}

.login-btn {
  margin-top: 32px;
  padding: 5px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-weight: normal;
  font-size: medium;
}