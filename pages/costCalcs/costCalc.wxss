/* pages/costCalcs/costCalc.wxss */

.title_container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 42rpx 0;
  box-sizing: border-box; 
}

.title_container text {
  font-size: 22px;
}

.top {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 32rpx;
  margin-right: 32rpx;
  margin-top: 10rpx;
}

.top-btn{
  margin-top: 16rpx;
}

.hr{
  width: 100%;
  height: 1px;
  margin: 30px 0;
  background-color: #c7c7c7;
}

.table {
  border: solid 1rpx #c8c8c8;
  margin-left: 32rpx;
  margin-right: 32rpx;
}

.tr {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.td {
  display: flex;
  align-items: center;
  justify-content: center;
  color:#5c5c58;
  height:8vh;
  width:100%;
  border:1rpx solid #c8c8c8;
  font-size: 24rpx;
}

.bg-w{
  background: snow;
}

.th {  
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 8vh;
  background: #eeeeee;
  color: #666666; 
  border: 1px solid #c8c8c8;
  font-size: 14px;
}

.price{
  color:#f53557;
}